  },
  "bugs": {
    "url": "https://github.com/beamer-bridge/beamer/issues"
  },
  "homepage": "https://www.beamerbridge.com/",
  "scripts": {
    "build": "tsc",
    "start": "node -r ./node_modules/ts-node/register ./src/cli.ts",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore --max-warnings 0 .",
    "lint:fix": "eslint --ext .js,.ts --ignore-path .gitignore --fix .",
    "test:unit": "jest unit",
    "test:coverage": "jest --collect-coverage",
    "generate-types": "typechain --target=ethers-v5 ./src/assets/abi/**.json --out-dir=./types-gen/contracts/",
    "postinstall": "yarn generate-types"
  },
  "dependencies": {
    "@arbitrum/sdk": "3.0.0",
    "@eth-optimism/sdk": "2.0.2",
    "@eth-optimism/sdk-1.0.2": "npm:@eth-optimism/sdk@1.0.2",
    "@ethersproject/providers": "5.7.2",
    "commander": "^9.4.1",
    "ethers": "5.7.2",
    "pkg": "^5.8.1"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.2.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^16.11.39",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "18.x"
  }
}
